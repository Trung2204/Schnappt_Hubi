package com.guigame.main;

import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.input.KeyEvent;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;
 
public class Main extends Application {
    
    @Override
    public void start(Stage primaryStage) {
    	// Create the Initial Menu scene
        Button playButton = new Button("Play");
        VBox menuLayout = new VBox(playButton);
        Scene menuScene = new Scene(menuLayout, 500, 500);
        
        // Create the Main Game Screen scene
        Label gameLabel = new Label("Main Game Screen");
        VBox gameLayout = new VBox(gameLabel);
        Scene gameScene = new Scene(gameLayout, 500, 500);
        
        // Set up the button to switch to the game scene when clicked
        playButton.setOnAction(event -> primaryStage.setScene(gameScene));

        // Set the initial scene to the menu scene and show the stage
        primaryStage.setScene(menuScene);
        primaryStage.setTitle("Two Scene Application");
        primaryStage.addEventHandler(KeyEvent.KEY_PRESSED,  (event) -> {
            System.out.println("Key pressed: " + event.toString());

            switch(event.getCode().getCode()) {
                case 27 : { // 27 = ESC key
                    primaryStage.close();
                    break;
                }
                case 10 : { // 10 = Return
                    primaryStage.setWidth( primaryStage.getWidth() * 2);
                }
                default:  {
                    System.out.println("Unrecognized key");
                }
            }
        });
        primaryStage.show();
    }
 public static void main(String[] args) {
        launch(args);
    }
}